/* pages/goodsInfo/index.wxss */
page{
  padding-bottom: 100rpx;
}

.nx_swiper swiper{
  width: 750rpx; 
  height: 400rpx;
}

.nx_swiper swiper image{
  width: 750rpx;
  height: 400rpx;
}

.nx_detail_main{
  background-color: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  margin: 20rpx; /* 使容器距离页面两边各有20rpx的距离 */
}

.nx_detail_main_item_left {
  float: left;
  width: 100%;
}

.nx_detail_main_item_right {
  float: right;
  width: 100%;
}


.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  border-top: 1rpx solid #ccc
}

.footer_tool .order_pay_wrap{
  flex: 3;
  background-color: orange;
  color:white;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}