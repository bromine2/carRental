/* pages/orderInfo/index.wxss */
.nx_line{
  margin:20rpx;
}

.nx_line .nx_line_list{
  background-color: white;
  border-radius: 20rpx;
}

.nx_line_item{
  width: 100%;
  padding: 20rpx;
  border-bottom: 1 rpx solid;
}

.nx_line_left{
  flex: 2;
  display:flex;
  align-items: center;
}

.nx_line_right{
  flex:2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
}

.nx_line_left image{
  width: 100%;
  height: 140rpx;
}

.nx_line_mid{
  flex: 5;
  padding: 0 40rpx;
}

.btn{
  font-size: 28rpx;
  border: 1px solid #ccc;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #eee;
  margin:0 10rpx;
}